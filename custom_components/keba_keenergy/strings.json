      },
      "night_temperature": {
        "name": "Night temperature"
      }
    },
    "sensor": {
      "outdoor_temperature": {
        "name": "Outdoor temperature"
      },
      "operating_mode": {
        "name": "Operating mode",
        "state": {
          "auto": "Auto",
          "day": "Day",
          "night": "Night",
