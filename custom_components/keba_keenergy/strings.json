        }
      },
      "min_temperature": {
        "name": "Minimum temperature"
      },
      "max_temperature": {
        "name": "Maximum temperature"
      },
      "state": {
        "name": "State",
        "state": {
          "auto_cool": "Auto cool",
          "auto_heat": "Auto heat",
          "defrost": "Defrost",
          "flow": "Flow",
          "inflow": "Inflow",
